<%- include('page_header') %>

<div class="container mt-3">
  <div class="h4">ตะกล้าสินค้า</div>
  <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th width="140px"></th>
            <th width="150px">ภาพสินค้า</th>
            <th width="100px">บาร์โค้ด</th>
            <th>รายการ</th>
            <th class="text-right" width="100px">ราคา</th>
            <th class="text-right" width="100px">จำนวน</th>
            <th class="text-right" width="100px">ยอดรวม</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach((product) => { %>
            <tr>
                <td class="test-center">
                    <a href="/editItemInCart/<%= product.id %>" class="btn btn-info">
                                <span class="material-symbols-outlined material-icons">
                                    edit
                                </span>
                            </a>
                            <a href="/deleteItemInCart/<%= product.id %>" onclick="return confirm('Are you sure ?')" class="btn btn-danger">
                                <span class="material-symbols-outlined material-icons">
                                    close
                                </span>
                            </a>
                </td>
                <td><img src="../images/<%= product.img %>" width="150px"></td>
                <td><%= product.barcode %></td>
                <td><%= product.name %></td>
                <td class="text-right"><%= product.price %></td>
                <td class="text-right"><%= product.qty %></td>
                <td class="text-right"><%= product.price * product.qty %></td>
            </tr>
        <% }) %>
    </tbody>
  </table>
  <div class="text-center">
    รวม <%= totalQty %> ชิ้น เป็นเงิน <%= totalPrice %>
  </div>
  <div class="text-center">
    <a href="/confirmOrder" class="btn btn-info btn-lg">
        ยืนยันการซื้อ
        <span class="material-symbols-outlined material-icons">
            chevron_right
        </span>
    </a>
  </div>

</div>

<%- include('page_footer') %>



