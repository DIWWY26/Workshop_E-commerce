<%- include('header') %>

<form action="/changeProfile" method="post">
    <div class="card mt-3">
        <div class="card-body">
            <div class="card-title">แก้ไขข้อมูล</div>
            <div class="mt-3">
                <label for="">ชื่อ</label>
                <input type="text" name="name" id="" class="form-control" value="<%= user.name %>">
            </div>
            <div class="mt-3">
                <label for="">username</label>
                <input type="text" name="usr" id="" class="form-control" value="<%= user.usr %>">
            </div>
            <div class="mt-3">
                <label for="">password <span class="text-danger"> *** หากไม่ป้อนจะยึดตามรหัสเดิม</span></label>
                <input type="password" name="pwd" id="" class="form-control" >
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-info">
                    Save
                </button>
            </div>

            <% if (session.message != undefined) { %>
            <div class="alert alert-success mt-3">
                <%= session.message %>
                <% session.message = undefined %>
            </div>
            <% } %>
        </div>
    </div>
</form>

<%- include('footer') %>