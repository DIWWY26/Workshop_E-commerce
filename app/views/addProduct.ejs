<%- include('header') %>

<form method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-body">
            <div class="card-title">เพิ่มรายการสินค้า</div>
            <div class="mt-3">
                <label for="">ประเภทสินค้า</label>
                <select name="group_product_id" class="form-control">
                    <% groupProducts.forEach((groupProduct) => { %>
                        <option value="<%= groupProduct.id %>"
                            <% if (product.group_product_id == groupProduct.id) { %>
                            selected
                            <% } %>
                            >
                            <%= groupProduct.name %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="mt-3">
                <label for="">Barcode</label>
                <input type="text" name="barcode" class="form-control" value="<%= product.barcode %>"/>
            </div>
            <div class="mt-3">
                <label for="">ชื่อสินค้า</label>
                <input type="text" name="name" class="form-control" value="<%= product.name %>" />
            </div>
            <div class="mt-3">
                <label for="">ราคาทุน</label>
                <input type="text" name="cost" class="form-control" value="<%= product.cost %>" />
            </div>
            <div class="mt-3">
                <label for="">ราคาจำหน่าย</label>
                <input type="text" name="price" class="form-control" value="<%= product.price %>" />
            </div>
            <div class="mt-3">
                <label for="">ภาพสินค้า</label>
                <% if (product.img != undefined) { %>
                <div class="mb-1 mt-1"><img src="../images/<%= product.img %>" width="200px" alt=""></div>
                <% } %>
                <input type="file" name="img" class="form-control"/>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-info">
                    Save
                </button>
            </div>
        </div>
    </div>
</form>

<%- include('footer') %>