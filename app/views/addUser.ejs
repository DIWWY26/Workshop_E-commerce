<%- include('header') %>

<form method="post">
    <div class="card mt-3">
        <div class="card-body">
            <div class="card-title">เพิ่มผู้ใช้งานระบบ</div>
            <div class="mt-3">
                <label for="">ชื่อ</label>
                <input type="text" name="name" id="" class="form-control" value="<%= user.name %>">
            </div>
            <div class="mt-3">
                <label for="">username</label>
                <input type="text" name="usr" id="" class="form-control" value="<%= user.usr %>">
            </div>
            <div class="mt-3">
                <label for="">password</label>
                <input type="text" name="pwd" id="" class="form-control" value="<%= user.pwd %>">
            </div>
            <div class="mt-3">
                <label for="">ระดับ</label>
                <div>
                    <input type="radio" name="level" value="user" id="" <% if (user.level == 'user') { %> checked <% } %> /> User
                    <input type="radio" name="level" value="admin" id="" <% if (user.level == 'admin') { %> checked <% } %> /> Admin
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-info">
                    Save
                </button>
            </div>
        </div>
    </div>
</form>

<%- include('footer') %>